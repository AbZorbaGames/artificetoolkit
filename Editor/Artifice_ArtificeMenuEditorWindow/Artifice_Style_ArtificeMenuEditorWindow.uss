.menu-editor-container{
    
}

.menu-editor-split-pane{
    display: flex;
    flex-direction: row;
}

.menu-panel-container{
    border-right-width: 1px;
    border-color: black;
}

.content-container{
    background-color: #313131;
    padding: 3px;
}


/* Artifice Menu Item */
.menu-item{
    border-left-width: 1px;
    border-bottom-width: 1px;
    border-color: black;
}

.menu-item--selected{
    transition: 0.4s;
    background-color: #2c2c2c;
}

.menu-item-header-container{
    height: 30px;
    padding-left: 10px;
    
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-content: center;
    
    width: 100%;
}

.menu-item-header-container:hover {
    transition: 0.4s;
    background-color: #1f1f1f;
}

.menu-item-header-icon{
    width: 22px;
    height: 22px;
    align-self: center;
}

.menu-item-header-label{
    margin-left: 3px;
    height: 100%;
    -unity-text-align: middle-left;
}

.menu-item-collapse-button {
    transition: 0.4s;
    position: absolute;
    right: 5px;
    height: 24px;

    top: 50%;
    /*translate: 0 -50%;*/
    margin-top: -12px;

    rotate: 90deg;
}


.menu-item-collapse-button--expanded{
    transition: 0.4s;
    rotate: 0deg;
}

